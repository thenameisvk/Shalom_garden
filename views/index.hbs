    .container {
      text-align: center;
      max-width: 800px;
      padding: 2rem;
    }
    
    .logo {
      margin-bottom: 1.5rem;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards 0.2s;
    }
    
    .logo h1 {
      font-family: 'Playfair Display', serif;
      color: var(--primary);
      font-size: 4rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      letter-spacing: 1px;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    
    .logo .tagline {
      font-size: 1.4rem;
      color: var(--dark);
      font-weight: 400;
      margin-bottom: 0;
      position: relative;
      display: inline-block;
    }
    
    .logo .tagline::after {
      content: "";
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 3px;
      background: linear-gradient(to right, var(--primary), var(--accent));
      border-radius: 3px;
    }
    
    .welcome-text {
      margin-bottom: 2rem;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards 0.4s;
    }
    
    .welcome-text h4 {
      font-size: 1.2rem;
      color: var(--dark);
      font-weight: 500;
      letter-spacing: 2px;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
    }
    
    .description {
      font-size: 1.1rem;
      color: #4a4a4a;
      line-height: 1.6;
      max-width: 600px;
      margin: 0 auto 2.5rem;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards 0.6s;
    }
    
    /* Custom button styling */
    .cta-button {
      display: inline-block;
      background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
      color: white;
      font-weight: 600;
      padding: 14px 38px;
      border-radius: 50px;
      text-decoration: none;
      transition: all 0.4s ease;
      box-shadow: 0 6px 15px rgba(45, 90, 39, 0.3);
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards 0.8s;
      border: none;
      font-size: 1.1rem;
    }
    
    .cta-button:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 10px 25px rgba(45, 90, 39, 0.4);
      color: white;
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
    }
    
    .cta-button:active {
      transform: translateY(1px);
    }
    
    .cta-button::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: 0.5s;
    }
    
    .cta-button:hover::before {
      left: 100%;
    }
    
    .features {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 3rem;
      flex-wrap: wrap;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease forwards 1s;
    }
    
    .feature {
      background: white;
      padding: 1.5rem;
      border-radius: 16px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      width: 150px;
      transition: transform 0.3s ease;
    }
    
    .feature:hover {
      transform: translateY(-5px);
    }
    
    .feature i {
      font-size: 2rem;
      color: var(--primary);
      margin-bottom: 0.8rem;
    }
    
    .feature p {
      font-size: 0.9rem;
      color: var(--dark);
      margin: 0;
      font-weight: 500;
    }
    
    .plant-decoration {
      position: absolute;
      z-index: -1;
      opacity: 0.15;
    }
    
    .plant-1 {
      top: 10%;
      left: 5%;
      font-size: 8rem;
      transform: rotate(-15deg);
      animation: float 6s ease-in-out infinite;
    }
    
    .plant-2 {
      bottom: 10%;
      right: 5%;
      font-size: 10rem;
      transform: rotate(15deg);
      animation: float 8s ease-in-out infinite 1s;
    }
    
    .bounce {
      animation: bounce 2s ease infinite;
    }
    
    /* Animations */
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-20px);
      }
      60% {
        transform: translateY(-10px);
      }
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0) rotate(-15deg);
      }
      50% {
        transform: translateY(-20px) rotate(-15deg);
      }
    }
    
    /* Responsive design */
    @media (max-width: 768px) {
      .logo h1 {
        font-size: 3rem;
      }
      
      .logo .tagline {
        font-size: 1.2rem;
      }
      
      .features {
        gap: 1rem;
      }
      
      .feature {
        width: 130px;
        padding: 1.2rem;
      }
      
      .plant-1, .plant-2 {
        display: none;
      }
    }
    
    @media (max-width: 576px) {
      .logo h1 {
        font-size: 2.5rem;
      }
      
      .description {
        font-size: 1rem;
      }
      
      .cta-button {
        padding: 12px 30px;
        font-size: 1rem;
      }
      
      .features {
        flex-direction: column;
        align-items: center;
      }
      
      .feature {
        width: 100%;
        max-width: 250px;
      }
    }
  </style>
