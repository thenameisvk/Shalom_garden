<div class="container mt-4 pt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 style="color:#2d5a27;font-weight:bold;">All Products</h2>
    <a href="/admin/add-product" class="btn btn-success" style="border-radius:8px;">➕ Add Product</a>
  </div>

  {{#if products.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped align-middle text-center" style="border-radius:8px;overflow:hidden;">
      <thead class="table-success">
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Description</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td><img src="{{this.image}}" style="width:80px;height:80px;object-fit:cover;border-radius:6px;"></td>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>₹{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td>
            <button class="btn btn-link p-0" style="color:#2d5a27;font-weight:600;" data-bs-toggle="modal" data-bs-target="#descModal-{{@index}}">
              Read More
            </button>

            <!-- Description Modal -->
            <div class="modal fade" id="descModal-{{@index}}" tabindex="-1">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="border-radius:12px;">
                  <div class="modal-header">
                    <h5 class="modal-title">{{this.name}} - Description</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                  </div>
                  <div class="modal-body" style="max-height:300px;overflow-y:auto;text-align:justify;">
                    {{this.description}}
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </td>
          <td>{{formatDate this.createdAt}}</td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Delete this product?');">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <p class="text-center text-muted">No products found.</p>
  {{/if}}
</div>
